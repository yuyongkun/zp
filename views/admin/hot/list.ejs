 <%include ../header.ejs%>
 
<body>
   <%include ../left.ejs%>
<script type="text/javascript">
	function deletePro(id){
        $.MsgBox.Confirm("温馨提示", "执行删除后将无法恢复，确定继续吗？温馨提示", function(){
        	 $.ajax({    
                 type:'get',        
                 url:'/product/deleteHot/'+id,    
                 cache:false,    
                 dataType:'json',    
                 success:function(data){
                	 alert("你居然真的删除了..."); 
                	 var url="/product/hot/product";
       		         location.href =url;
                 }    
             });
        });
    }
</script>
<section id="main" class="column">
	<article class="stats_overview"
		style="float: left; width: 100%;height: auto; border: none;text-align: center;min-height: 500px;">
		<article class="module width_full">
			<div class="tab_container">
				<table cellspacing="0" class="tablesorter"> 
					<thead> 
						<tr style="text-align: center;"> 
							<th width="4%" class="tc">行号</th> 
							<th width="6%">产品编码</th> 
							<th width="20%">产品名称</th> 
							<th width="20%">一级列表</th>
							<th width="20%">二级列表</th> 
							<th width="20%">图片</th>
							<th width="15%">操作</th>
						</tr> 
					</thead> 
					<tbody> 
						<%  i=0; 
						list.forEach(function(pro){ 
						i++; %>
						<tr>
							<td class="tc"><%=i%></td>
							<td><%= pro.code%></td> 
							<td><%= pro.nameCh%></td> 
							<td><%= pro.fName%></td>
							<td><%= pro.sName%></td> 
							<td><img class="product_img" src="<%= pro.imgUrl%>"></img></td>
							<td>
							<a href="javascript:void(0)" onclick="deletePro('<%= pro.id%>')" title="删除" ><font class="ficomoon icon-delete"></font></a></td> 
						</tr>
		<%})%>
						
						
					</tbody> 
				</table>
			</div>
		</article><!-- end of post new article -->
		<nav class="nav">
			<ul class="pagination paginationA paginationA01" id="pagination">
				<%- locals %>
			</ul>
		</nav>
	</article>
</section>
 
</body>

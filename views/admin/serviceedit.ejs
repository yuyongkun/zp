<body>
<input id="edit-type" type="hidden" name="type" value=<%=type%> />
<%include left.ejs%>
<section class="column">
<div class="service-wrap">
<form id="formService">
	<div class="group-item">
		<label>服务类型:</label>
		<!-- <ul class="service-edit-n1">
		<li><a href="/service/edit/1">服务支持</a></li>
		<li><a href="/service/edit/2">服务保障</a></li>
		<li><a href="/service/edit/3">服务流程</a></li>
		</ul> -->
		<select id="changeService">
			<option selected value="1" >服务支持</option>
			<option value="2">服务保障</option>
			<option value="3">服务流程</option>
		</select>
	</div>
	<div class="group-item">
		<label style="padding-bottom: 10px">服务内容:</label>
		<script type="text/plain" id="editor"><%-serviceContent%></script>
	</div>
	<div class="group-item">
		<span id="submit" class="submit">提交</span>
	</div>
</form>
</div>
</section>
<script type="text/javascript" src="/js/libs/jquery-1.11.3.min.js"></script>
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<script type="text/javascript" src="/ueditor/ueditor.all.js"></script>
<script type="text/javascript">
 var editor=UE.getEditor("editor", {
                    "initialFrameHeight": 500,
                    "initialFrameWidth": 949
                });
 var serviceDom=document.getElementById('changeService');
 serviceDom.onchange=function(){
 	if(this.value==1){
 		location.href='/service/edit/1';
 	}else if(this.value==2){
 		location.href='/service/edit/2';
 	}else if(this.value==3){
 		location.href='/service/edit/3';
 	}
 };
$('#submit').click(function(){
	var content=editor.getContent();
	// if(content===''){
	// 	alert('服务内容不能为空');
	// 	return;
	// }
	var formdata=new FormData();
	formdata.append('type',$('#edit-type').val());
	formdata.append('content',content);
	$.ajax({
		url:'/service/addservice',
		type:'post',
		dataType:'json',
		data:formdata,
		 processData: false,  
        contentType: false, 
		success:function(result){
			if(result.responseCode==='000000'){
				alert('上传成功');
			}else{
				alert(result.responseMsg);
			}
		},
		error:function(xhr,statustext){
			alert(statustext);
		}
	});
});
</script>
</body>

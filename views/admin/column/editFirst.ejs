    <%include ../header.ejs%>
    <body>
       <%include ../left.ejs%>
      <section id="main" class="column">
    <article class="module width_full">
			<div class="module_content">
				<fieldset class="product-detail">
					<label for="txtName">一级产品名称</label>
					<input type="hidden" id="id" name="id" value="<%=result.id%>"/>
					<div class="group-item">中文:<input type="text" id="nameCh" name="nameCh" value="<%=result.productNameCh%>"/></div>
					<div class="group-item">英文:<input type="text" id="nameEn" name="nameEn" value="<%=result.productNameEn%>"/></div>
				</fieldset>
				<div class="tc mt20">
					<a onclick="saveProduct()" class="button green" id="btnAdd">保存</a>
				</div>
			</div>
			
		</article><!-- end of post new article -->
		</section>
		
		<script type="text/javascript">
   function saveProduct(){
	   var id=$("#id").val();
	   var nameEn=$("#nameEn").val();
	   var nameCh=$("#nameCh").val();
	   var data={productNameEn:nameEn,productNameCh:nameCh,id:id};
	   
	   $.ajax({
		   url:   "/product/first/save",
		   type: "post",
		   data: data,
		   dataType:'json',
		   error: function(XMLHttpRequest, textStatus, errorThrown){
		      var s3=errorThrown;
		      alert("error message : "+errorThrown.toString());
		      },
		   success: function(data){
		      var url="/product/first/list";
		      location.href =url;
		   }
		  }); 
   }
</script>
</body>
